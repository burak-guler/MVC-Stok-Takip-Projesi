@model MVCSTOK.Models.Entity.TBLKATEGORILER
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@* html.beginform methodu 3 tane parametre alır.
    1.paramete: bu beginformda bir tetikleme, etkileşim olduğu zaman nereyi çalıştırması gerektiğinin yeri
    2.parametre: çalıştıracağı yerin konumu,  çalıştıracağı yerin nerde sorusuna cevabı.
    3.nezaman çalışacak bu formun cevabı , yani biz birşey gönderdiğimiz zaman form post olduğunda.

*@

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.KATEGORIID)
        @Html.TextBoxFor(m => m.KATEGORIID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(m => m.KATEGORIAD)
        @Html.TextBoxFor(m => m.KATEGORIAD, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning">Kategori Güncelle</button>
    </div>

}


